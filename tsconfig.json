{
  "compilerOptions": {
    "target": "es5",
    "module": "es6",
    "jsx": "preserve",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "noImplicitReturns": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@*": [ "src/*" ],
      "@assets": ["contents/assets"],
      "@styles": ["src/styles"]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "public",
    ".cache"
  ]
}
